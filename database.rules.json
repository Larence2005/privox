{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "chats": {
      "$chatId": {
        ".read": "data.child('participants').child(auth.uid).exists()",
        ".write": "auth != null && newData.child('participants').child(auth.uid).exists()",
        ".validate": "newData.hasChildren(['participants', 'timestamp'])"
      }
    },
    "messages": {
      "$chatId": {
        ".indexOn": "timestamp",
        ".read": "root.child('chats/' + $chatId + '/participants/' + auth.uid).exists()",
        ".write": "root.child('chats/' + $chatId + '/participants/' + auth.uid).exists()",
        "$messageId": {
          ".validate": "newData.hasChildren(['uid', 'displayName', 'photoURL', 'encryptedText', 'iv', 'timestamp']) && newData.child('uid').val() === auth.uid"
        }
      }
    },
    "user-chats": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid",
        "$chatId": {
          ".write": "(newData.val() === null && auth.uid === $uid) || (newData.val() !== null && newData.hasChild(auth.uid))",
          ".validate": "newData.val() === null || (newData.hasChild($uid) && newData.hasChild(auth.uid))"
        }
      }
    }
  }
}
